{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "paths": {
      "entities/*": ["src/entities/*"],
      "utilities/*": ["src/utilities/*"],
      "interfaces/*": ["src/interfaces/*"],
      "errors/*": ["src/errors/*"],
      "services/*": ["src/services/*"],
      "middlewares/*": ["src/middlewares/*"],
      "configs/*": ["src/configs/*"],
      "*": [
        "node_modules/*",
        "src/*",
        "*"
      ]
    },
    "lib": [
      "es2015", "es5", "es6", "dom"
    ],
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/*",
    "src/configs/app-data-source.ts",
    "./index.ts",
    "*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}